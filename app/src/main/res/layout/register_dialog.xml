<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:elevation="5dp"
    android:orientation="vertical">
    <include layout="@layout/toolbar_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/assistant_regular"
                android:text="MTN Number"
                android:textColor="#61000000"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/textUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:fontFamily="@font/assistant_regular"
                android:hint="MTN Number"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#151515"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/assistant_regular"
                android:text="Password"
                android:textColor="#61000000"
                android:textSize="12dp" />
            <EditText
                android:id="@+id/textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:fontFamily="@font/assistant_regular"
                android:hint="Create Password"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#151515"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_margin_top"
                android:fontFamily="@font/assistant_regular"
                android:text="Street Address"
                android:textColor="@color/register_text"
                android:textSize="@dimen/register_text_size" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_margin_left"
                android:fontFamily="@font/assistant_regular"
                android:hint="Street Address Line 1"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="@color/register_text_tint"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_margin_top"
                android:fontFamily="@font/assistant_regular"
                android:text="Province"
                android:textColor="@color/register_text"
                android:textSize="@dimen/register_text_size" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_margin_left"
                android:fontFamily="@font/assistant_regular"
                android:hint="Province"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="@color/register_text_tint"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_margin_top"
                android:fontFamily="@font/assistant_regular"
                android:text="Code"
                android:textColor="@color/register_text"
                android:textSize="@dimen/register_text_size" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_margin_left"
                android:fontFamily="@font/assistant_regular"
                android:hint="Code"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="@color/register_text_tint"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dlg_register_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/blue_radius_btn"
            android:fontFamily="@font/assistant_bold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="13dp"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>
</LinearLayout>