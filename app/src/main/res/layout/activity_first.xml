<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical"
    tools:context=".FirstActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/signup_header0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/mtn_logo" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/logo_icon" />
        </LinearLayout>

        <customfonts.AssistantSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:padding="25dp"
            android:text="The best \nentertainment \neverywhere you go."
            android:textAlignment="center"
            android:textColor="#252525"
            android:textSize="32dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/made4u" />

        <customfonts.AssistantSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:text="starting at $49 per month"
            android:textAlignment="center"
            android:textColor="#7B8D93"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/sign_up_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/blue_radius_btn"
            android:fontFamily="@font/assistant_bold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="13dp"
            android:text="Start your Free Trial Now!"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/sign_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <customfonts.AssistantSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already a user?"
                android:textColor="#151515"
                android:textSize="14dp" />

            <customfonts.AssistantSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="#017FB3"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>